<div class="container">
  <div class="d-flex justify-content-around">
    <div>
      <div class="card border-0 m-auto col-lg-6 col-sx-8">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <div class="card-body">
          <h5 class="card-title"><%= @alpaca.name %></h5>
          <p class="card-text">My nickname is <%= @alpaca.nick_name %>. I would like to get hired by you, but I need my personal space.</p>
          <table class="table">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Age</th>
                <td> <%= @alpaca.age %> years </td>
              </tr>
              <tr>
                <th scope="row">Weight</th>
                <td> <%= @alpaca.weight %> kg</td>
              </tr>
              <tr>
                <th scope="row">Height</th>
                <td> <%= @alpaca.height %> cm</td>
              </tr>
              <tr>
                <th scope="row">Wool Type</th>
                <td> <%= @alpaca.wool_type %> </td>
              </tr>
              <tr>
                <th scope="row">Color</th>
                <td> <%= @alpaca.color %> </td>
              </tr>
              <tr>
                <th scope="row">Owner</th>
                <td><%= @alpaca.owner.first_name %> <%= @alpaca.owner.last_name  %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card border-0 m-auto col-lg-6 col-sx-8 mt-4">
        <div class="card border-0 bg-dark col-6 mt-4 m-auto">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png" class="card-img rounded" alt="...">
          <div class="card-img-overlay d-flex justify-content-center align-items-center">
            <h5 class="text-white">Eating Grass</h5>
          </div>
        </div>
        <div class="card border-0 bg-dark col-6 mt-3 mb-3 m-auto">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png" class="card-img rounded" alt="...">
          <div class="card-img-overlay d-flex justify-content-center align-items-center">
            <h5 class="text-white">Producing Wool</h5>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-white p-3 sticky-top m-auto col-lg-3 mt-3">

      <div class="d-flex justify-content-between mt-3">
        <p><strong>Price per Day</strong></p>
        <p>£4.95</p>
      </div>

      <div class="d-flex justify-content-between mt-3">
        <p><strong>Price per Night</strong></p>
        <p>£6.95</p>
      </div>

      <div class="d-flex justify-content-between mt-3">
        <p><strong>With Wool Shaving</strong></p>
        <p>£6.95</p>
      </div>

      <div class="d-flex justify-content-between mt-3 border-bottom">
        <p><strong>Food included</strong></p>
        <p>£6.95</p>
      </div>

      <a href="#" class="btn btn-primary w-100 mt-3">Book Alpaca</a>
    </div>
  </div>
</div>
